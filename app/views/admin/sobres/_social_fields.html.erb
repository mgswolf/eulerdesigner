<div class="fields">
  <div class="clearfix">
      <%= f.label :nome, :class => :label %>
    <div class="input">
      <%= f.text_field :nome %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :url, :class => :label %>
    <div class="input">
      <%= f.url_field :url %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :imagem, :class => :label %>
    <div class="input">
      <%= f.file_field :imagem %>
      <% unless f.object == nil || f.object.new_record? %>
      <%= image_tag f.object.imagem(:thumb) %>
      <% end %>
    </div>
  </div>
    <p>
      
SEO:<hr />
<% @seo = f.object.build_seo %>
 <%= f.fields_for :seo, f.object.seo do |seo| %>
   <%= render 'shared/simple_seo', :seo => seo %>
    <% end %>
<br />
    </p>
    <label class="labels" > <%= link_to_remove_fields "Remover Social", f %> </label>
  </fieldset>
</div>
