
<label class="label"><%= t("activerecord.attributes.admin_sobre.nome", :default => t("activerecord.labels.nome", :default => "Nome")) %>:</label>
<p><%= @sobre.nome %></p>

<label class="label"><%= t("activerecord.attributes.admin_sobre.descricao", :default => t("activerecord.labels.descricao", :default => "Descricao")) %>:</label>
<p><%= sanitize(@sobre.descricao) %></p>

