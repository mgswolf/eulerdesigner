<div class="well">
  <h3>Social Itens</h3>
  <% @sobre.socials.each do |social| %>
      <label class="label"><%=  social.nome %></label>
      <p><%= image_tag social .imagem(:thumb) %> <%=  social.url %>
       <%= seo_show(social) %>
      </p>
  <% end %>
</div>

<div class="form-actions">
<%= link_to "Voltar", admin_sobres_path, :class => 'btn'  %>
<%= link_to "Editar", edit_admin_sobre_path(@sobre), :class => 'btn' %>
<%= link_to "Excluir", admin_sobre_path(@sobre), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Conformar exclusão?")}", :class => 'btn' %>
</div>
