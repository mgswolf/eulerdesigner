
<label class="label"><%= t("activerecord.attributes.admin_user.login", :default => t("activerecord.labels.login", :default => "Login")) %>:</label>
<p><%= @user.login %></p>

<label class="label"><%= t("activerecord.attributes.admin_user.nome", :default => t("activerecord.labels.nome", :default => "Nome")) %>:</label>
<p><%= @user.nome %></p>

<label class="label"><%= t("activerecord.attributes.admin_user.email", :default => t("activerecord.labels.email", :default => "Email")) %>:</label>
<p><%= @user.email %></p>

<label class="label"><%= t("activerecord.attributes.admin_user.role_id", :default => t("activerecord.labels.role_id", :default => "Role")) %>:</label>
<p><%= @user.role_id %></p>


<div class="form-actions">
<%= link_to "Back", admin_users_path, :class => 'btn'  %>
<%= link_to "Edit", edit_admin_user_path(@user), :class => 'btn' %>
<%= link_to "Delete", admin_user_path(@user), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn' %>
</div>
